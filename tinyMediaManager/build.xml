<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project default="create_run_jar" name="Create Runnable Jar for Project tinyMediaManager with libraries in sub-folder">
	<!--this file was created by Eclipse Runnable JAR Export Wizard-->
	<!--ANT 1.7 is required                                        -->
	
	<!-- software revision number -->
	<property name="version" value="Alpha2"/>
	<buildnumber file="buildnumber.txt" />
	
	<target name="create_run_jar">
    <delete dir="build/lib" />
    <delete dir="build" />
    <mkdir dir="build" />
    <mkdir dir="build/lib" />
		<jar destfile="build/tmm.jar">
			<manifest>
				<attribute name="Main-Class" value="org.tinymediamanager.TinyMediaManager" />
				<attribute name="Class-Path" value=". lib/commons-lang3-3.1.jar lib/log4j-1.2.16.jar lib/themoviedbapi-3.2-SNAPSHOT-r169.jar lib/beansbinding-1.2.1.jar lib/jdom.jar lib/commons-codec-1.6.jar lib/commons-io-2.1.jar lib/jackson-core-lgpl-1.9.9.jar lib/jackson-mapper-lgpl-1.9.9.jar lib/objectdb.jar lib/Scaling-bin.jar lib/thetvdbapi-1.4-SNAPSHOT-r123.jar lib/forms-1.3.0.jar lib/JSplitButton_1.2.jar lib/commons-logging-1.1.1.jar lib/fluent-hc-4.2.1.jar lib/httpclient-4.2.1.jar lib/httpclient-cache-4.2.1.jar lib/httpcore-4.2.1.jar lib/httpmime-4.2.1.jar" />
			</manifest>
			<fileset dir="bin" />
		</jar>
		<copy file="lib/commons-lang3-3.1.jar" todir="build/lib" />
		<copy file="lib/log4j-1.2.16.jar" todir="build/lib" />
		<copy file="lib/themoviedbapi-3.2-SNAPSHOT-r169.jar" todir="build/lib" />
		<copy file="lib/beansbinding-1.2.1.jar" todir="build/lib" />
		<copy file="lib/jdom.jar" todir="build/lib" />
		<copy file="lib/commons-codec-1.6.jar" todir="build/lib" />
		<copy file="lib/commons-io-2.1.jar" todir="build/lib" />
		<copy file="lib/jackson-core-lgpl-1.9.9.jar" todir="build/lib" />
		<copy file="lib/jackson-mapper-lgpl-1.9.9.jar" todir="build/lib" />
		<copy file="lib/objectdb.jar" todir="build/lib" />
		<copy file="lib/Scaling-bin.jar" todir="build/lib" />
		<copy file="lib/thetvdbapi-1.4-SNAPSHOT-r123.jar" todir="build/lib" />
		<copy file="lib/forms-1.3.0.jar" todir="build/lib" />
		<copy file="lib/JSplitButton_1.2.jar" todir="build/lib" />
		<copy file="lib/commons-logging-1.1.1.jar" todir="build/lib" />
		<copy file="lib/fluent-hc-4.2.1.jar" todir="build/lib" />
		<copy file="lib/httpclient-4.2.1.jar" todir="build/lib" />
		<copy file="lib/httpclient-cache-4.2.1.jar" todir="build/lib" />
		<copy file="lib/httpcore-4.2.1.jar" todir="build/lib" />
		<copy file="lib/httpmime-4.2.1.jar" todir="build/lib" />
		
		<!-- buildinfo -->
    <propertyfile file="build/tmm.properties"
               comment="This file is automatically generated - DO NOT EDIT">        
      <entry key="version" value="${version} - r${build.number}"/>
    </propertyfile>
	</target>

	<target name='package-app' depends='create_run_jar'>
		<!-- <taskdef name='appbundler' classname='com.joshondesign.appbundler.BundlerTask' classpath='AppBundler/classes;AppBundler/XMLLib.jar;lib/commons-lang3-3.1.jar' /> -->
		
		<!-- Mac OSX -->
		<!--<appbundler bundle="bundle.xml" target="mac" destdir="dist" libdir="build/lib;lib;build;AppBundler" /> -->
		
		
		<!-- Windows -->
		<!--<appbundler bundle="bundle.xml" target="win" destdir="dist" libdir="build/lib;lib;build" /> -->
		<delete dir="dist/win/lib" />
		<delete dir="dist/win" />
		<mkdir dir="dist/win" />
		<mkdir dir="dist/win/lib" />
		<copy todir="dist/win/lib">
		  <fileset dir="build/lib" includes="*" />
		</copy>
		<copy file="build/tmm.jar" todir="dist/win" />
		<copy file="AppBundler/getdown.jar" todir="dist/win" />
		<copy file="AppBundler/getdown.txt" todir="dist/win" />
		<copy file="AppBundler/digest.txt" todir="dist/win" />
		<copy file="AppBundler/LICENSE" todir="dist/win" />
		<copy file="AppBundler/tinyMediaManager.bat" todir="dist/win" />
				
		<!-- Linux -->
		<delete dir="dist/linux/lib" />
    <delete dir="dist/linux" />
    <mkdir dir="dist/linux" />
		<mkdir dir="dist/linux/lib" />
    <copy todir="dist/linux/lib">
      <fileset dir="build/lib" includes="*" />
    </copy>
		<copy file="build/tmm.jar" todir="dist/linux" />
		<copy file="AppBundler/getdown.jar" todir="dist/linux" />
		<copy file="AppBundler/getdown.txt" todir="dist/linux" />
		<copy file="AppBundler/digest.txt" todir="dist/linux" />
		<copy file="AppBundler/LICENSE" todir="dist/linux" />
		<copy file="AppBundler/tinyMediaManager.sh" todir="dist/linux" />
		<chmod file="dist/linux/tinyMediaManager.sh" perm="ugo+rx"/>
		
		<!-- getdown -->
		<delete dir="dist/getdown/lib" />
		<delete dir="dist/getdown" />
		<mkdir dir="dist/getdown" />
		<mkdir dir="dist/getdown/lib" />
		<copy todir="dist/getdown/lib">
		  <fileset dir="build/lib" includes="*" />
		</copy>
		<copy file="build/tmm.jar" todir="dist/getdown" />
		<copy file="build/tmm.properties" todir="dist/getdown" />
		<copy file="AppBundler/getdown.txt" todir="dist/getdown" />
		<taskdef name="digest" classname="com.threerings.getdown.tools.DigesterTask"
		         classpath="AppBundler/getdown-tools-1.2.jar"/>
		<digest appdir="dist/getdown"/>
		
	</target>
	
</project>