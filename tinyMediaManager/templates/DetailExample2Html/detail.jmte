<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html>
  <head>
    <style>
      html {overflow:hidden;}
      html:hover {overflow:auto;}       
      .poster{ }
      .plot{ vertical-align:top; }
      .genres{}
      .caption{font-weight:bold; vertical-align:top;}
    </style>
  </head>

  <body>
    <!-- print movie name and movie year -->
    <h1>${movie.title} (${movie.year})</h1>
    <!-- print original title -->
    <h3>${movie.originalTitle}</h3>
    <br />
    <table>
      <tr>
        <!-- display movie poster (via url) or the image nopicture.gif if imageurl is empty -->
        <td><div class="poster"><img src="${if movie.posterUrl}${movie.posterUrl}${else}../nopicture.gif${end}" width="180px"/></div></td>
        <td class="plot">${movie.plot}</td>
      </tr>
      <tr>
        <!-- print all genres -->
        <td class="caption">Genres:</td><td><div>${foreach movie.genres genre , }${genre}${end}</div></td>
      </tr>
      <tr>
        <! -- print the director -->
        <td class="caption">Director:</td><td><div>${movie.director}</div></td>
      </tr>
      <tr>
        <!-- print the writer -->
        <td class="caption">Writer:</td><td><div>${movie.writer}</div></td>
      </tr>
        <!-- print all actors (their character and real name -->
        <td class="caption">Cast:</td><td><div>${foreach movie.actors actor <br /> }${actor.character} - ${actor.name}${end}</div></td>
      </tr>
    </table>
        
  </body>
    
</html>